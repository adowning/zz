{
  "name": "api",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "module": "index.ts",
  "scripts": {
    "dev": "bun --watch index.ts",
    "start": "bun src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src",
    "lint:fix": "bun lint --fix",
    "test": "bun test",
    "build": "tsc && tsc-alias",
    "format": "prettier --write .",
    "db:reset": "bun run scripts/seeds/reset.ts",
    "generate": "bun --bun drizzle-kit generate",
    "push": "bun --bun drizzle-kit push",
    "migrate": "bun --bun drizzle-kit migrate",
    "seed": "bun scripts/seed.ts",
    "studio": "bun --bun drizzle-kit studio",
    "mcp:dev": "bun run mcp/logstream/src/server.ts",
    "logs:forward": "bun run scripts/log-forwarder.ts",
    "dev:with-logs": "bun run src/index.ts 2>&1 | bun run scripts/log-forwarder.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.2.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "prettier": "^3.1.0",
    "prisma-json-types-generator": "^3.5.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^6.0.0-dev.20250814"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.1",
    "@hono/zod-openapi": "^0.19.10",
    "@libsql/client": "^0.15.10",
    "@passionfroot/prisma-generator-zero": "^0.4.0",
    "@rocicorp/zero": "^0.22.2025081300",
    "@scalar/hono-api-reference": "^0.9.13",
    "@t3-oss/env-core": "^0.13.8",
    "@thanhhoajs/websocket": "^1.0.9",
    "drizzle-orm": "^0.44.4",
    "drizzle-zero": "^0.13.3",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.8.12",
    "hono-pino": "^0.9.1",
    "http-status-codes": "^2.3.0",
    "jose": "^6.0.12",
    "nanoid": "^5.1.5",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "prisma-generator-drizzle": "^0.7.6",
    "stoker": "1.4.3",
    "zod": "^3.25.76",
    "zod-prisma-types": "^3.2.4"
  }
}